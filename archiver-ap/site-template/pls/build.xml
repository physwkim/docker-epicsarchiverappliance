<project name="PLS Custumized Build" default="pls">
    <description>The build file for the PLS Specific Configuration.</description>
	<target name="pls" depends="updateTemplate">
		<echo message="Pohang Light Source (PLS-II) : ${archapplsite}" />
		<echo message="Pohang Light Source (PLS-II) : STAGE_FOLDER - ${stage}" /> 
		<echo message="Pohang Light Source (PLS-II) : WAR FILES are in ${wardest}" />
		<echo message="Pohang Light Source (PLS-II) : PLS image files to STAGE_FOLDER/org/epics/archiverappliance/staticcontent/img" />  
		<copy todir="${stage}/org/epics/archiverappliance/staticcontent/img" overwrite="true">
			<fileset dir="img" />
		</copy>
		<echo message="Pohang Light Source (PLS-II) : css/main.css to STAGE_FOLDER/org/epics/archiverappliance/staticcontent/css" />  
		<copy file="css/main.css" todir="${stage}/org/epics/archiverappliance/staticcontent/css" overwrite="true" />
		<echo message="Pohang Light Source (PLS-II) : css/mgnt.css to STAGE_FOLDER/org/epics/archiverappliance/mgmt/staticcontent/css" />  
		<copy file="css/mgmt.css" todir="${stage}/org/epics/archiverappliance/mgmt/staticcontent/css" overwrite="true" />
	</target>   
	<target name="updateTemplate">
		<echo message="Pohang Light Source (PLS-II) : Apply template_changes.html to mgmt to STAGE_FOLDER/org/epics/archiverappliance/staticcontent" />
        <java classname = "org.epics.archiverappliance.mgmt.bpl.SyncStaticContentHeadersFooters" 
			  fork="true"  
			  failonerror="true" >  
 			<classpath path="${classes}" />
			<arg value="template_changes.html" />
			<arg value="${stage}/org/epics/archiverappliance/mgmt/staticcontent/"/>
        </java>  
    </target>  
</project>
